<div class="container mt-5">
  <h1> <%=  @task.title%></h1>
  <p><%= @task.details%></p>
  <p><%= @task.completed? ? "✅ this task is completed" : "❌ this task is not completed yet" %></p>
  <p><%= link_to "Edit task", edit_task_path(@task), class: 'btn btn-primary' %></p>
  <p><%= link_to "Back", tasks_path, class: 'btn btn-primary' %></p>
</div>
